{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2020",
    "sourceMap": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "moduleResolution": "node"
  },
  "include": ["src/**.ts", "src/**/*.js"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}
